<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane maxHeight="Infinity" maxWidth="Infinity" minHeight="700" minWidth="800" prefHeight="700.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.orekyuu.rabbithouse.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="ファイル">
                <MenuItem mnemonicParsing="false" text="プロジェクトを開く" onAction="#openProject"/>
                <MenuItem mnemonicParsing="false" text="プロジェクトの新規作成" onAction="#createProject"/>
                <MenuItem mnemonicParsing="false" text="保存"/>
                <MenuItem mnemonicParsing="false" text="上書き保存"/>
            </Menu>
            <Menu mnemonicParsing="false" text="開発">
                <MenuItem mnemonicParsing="false" text="エラーチェック"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab text="ブロック">
                <fx:include source="BlockEditor.fxml"/>
            </Tab>
            <Tab text="アイテム">
                <fx:include source="ItemEditor.fxml"/>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
